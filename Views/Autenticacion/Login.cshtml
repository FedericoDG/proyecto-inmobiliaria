@{
  Layout = "~/Views/Autenticacion/_Layout.cshtml";
}
@{
  ViewData["Title"] = "Acceso";
}

<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card shadow border-0">
        <div class="card-header bg-primary text-white d-flex align-items-center">
          <i class="bi bi-person-circle fs-3 me-2"></i>
          <span class="fs-4">Acceso al sistema</span>
        </div>
        <div class="card-body">
          @if (ViewBag.Mensaje != null)
          {
            <div class="alert alert-danger">@ViewBag.Mensaje</div>
          }
          <form method="post" autocomplete="off">
            <div class="mb-3">
              <label for="email" class="form-label">Correo electr칩nico</label>
              <input type="email" class="form-control" id="email" name="email" autocomplete="username" required>
            </div>
            <div class="mb-3">
              <label for="contrasena" class="form-label">Contrase침a</label>
              <input type="password" class="form-control" id="contrasena" name="contrasena"
                autocomplete="current-password" required>
            </div>
            <div class="d-flex justify-content-end gap-2 mt-4">
              <button type="submit" class="btn btn-primary px-4">
                <i class="bi bi-box-arrow-in-right me-1"></i> Ingresar
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>


