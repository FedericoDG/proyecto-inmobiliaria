@if (TempData["Mensaje"] != null)
{
  <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
    @TempData["Mensaje"]
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
  </div>
}

@if (TempData["Error"] != null)
{
  <div class="alert alert-danger alert-dismissible fade show text-center" role="alert">
    @TempData["Error"]
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
  </div>
}
@model inmobiliaria.Models.Contrato
@{
  ViewData["Title"] = "Detalle Contrato";
  Layout = "~/Views/Panel/_Layout.cshtml";
}

<div class="row mb-4">
  <div class="col-12">
    <div class="card shadow-sm border-0 bg-primary text-white">
      <div class="card-body d-flex align-items-center justify-content-between">
        <div>
          <h1 class="card-title mb-0 fs-3">
            <i class="bi bi-file-earmark-text me-2"></i>Detalle de Contrato
          </h1>
          <small class="text-white-50">Información completa del contrato seleccionado</small>
        </div>
        <a href="/panel/contratos" class="btn btn-light btn-lg">
          <i class="bi bi-arrow-left me-1"></i> Volver
        </a>
      </div>
    </div>
  </div>
</div>


<div class="container">
  <div class="row p-4">
    <div class="col-12 mb-4">
      <div class="card shadow-sm border-0 w-100">
        <div class="card-header bg-primary text-white">
          <i class="bi bi-info-circle me-2"></i>Detalles del contrato
        </div>
        <div class="card-body px-4 py-3">
          <div class="row g-3">
            <div class="col-md-6 col-lg-4">
              <div class="fw-bold text-secondary">Inquilino</div>
              <div class="text-dark">@ViewBag.Inquilino</div>
            </div>
            <div class="col-md-6 col-lg-4">
              <div class="fw-bold text-secondary">Inmueble</div>
              <div class="text-dark">@ViewBag.Inmueble</div>
            </div>
            <div class="col-md-6 col-lg-4">
              <div class="fw-bold text-secondary">Usuario Creador</div>
              <div class="text-dark">@ViewBag.UsuarioCreador</div>
            </div>
            <div class="col-md-6 col-lg-4">
              <div class="fw-bold text-secondary">Usuario Finalizador</div>
              <div class="text-dark">@ViewBag.UsuarioFinalizador</div>
            </div>
            <div class="col-md-6 col-lg-4">
              <div class="fw-bold text-secondary">Fecha de Inicio</div>
              <div class="text-dark">@(Model.FechaInicio.HasValue? Model.FechaInicio.Value.ToShortDateString() : "-")
              </div>
            </div>
            <div class="col-md-6 col-lg-4">
              <div class="fw-bold text-secondary">Fecha de Finalización</div>
              <div class="text-dark">@(Model.FechaFinOriginal.HasValue ?
                                Model.FechaFinOriginal.Value.ToShortDateString() : "-")</div>
            </div>
            <div class="col-md-6 col-lg-4">
              <div class="fw-bold text-secondary">Fecha Fin Anticipada</div>
              <div class="text-dark">@(Model.FechaFinAnticipada.HasValue ?
                                Model.FechaFinAnticipada.Value.ToShortDateString() : "-")</div>
            </div>
            <div class="col-md-6 col-lg-4">
              <div class="fw-bold text-secondary">Monto Mensual</div>
              <div class="text-dark">$@Model.MontoMensual</div>
            </div>
            <div class="col-md-6 col-lg-4">
              <div class="fw-bold text-secondary">Estado</div>
              <div class="text-dark">@Model.Estado</div>
            </div>
            <div class="col-md-6 col-lg-4">
              <div class="fw-bold text-secondary">Multa</div>
              <div class="text-dark">@(Model.Multa.HasValue ? "$" + Model.Multa.Value.ToString() : "-")</div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-12">
      @if (ViewBag.Pagos != null && ((IEnumerable<inmobiliaria.Models.Pago>)ViewBag.Pagos).Any())
      {
        <div class="card shadow-sm border-0 w-100 p-1">
          <div class="card-header bg-primary text-white">
            <i class="bi bi-cash-coin me-2"></i>Pagos asociados a este contrato
          </div>
          <div class="card-body p-0">
            <div class="table-responsive">
              <table class="table table-hover align-middle mb-0">
                <thead class="table-primary">
                  <tr>
                    <th>Número</th>
                    <th>Fecha Venc.</th>
                    <th>Fecha Pago</th>
                    <th>Detalle</th>
                    <th>Importe</th>
                    <th>Estado</th>
                    <th class="text-center">Acciones</th>
                  </tr>
                </thead>
                <tbody>
                  @{
                    var pagosList = ((IEnumerable<inmobiliaria.Models.Pago>)ViewBag.Pagos).ToList();
                  }
                  @for (int i = 0; i < pagosList.Count; i++)
                  {
                    var pago = pagosList[i];
                    bool habilitado = i == 0 || (pagosList[i - 1].Estado == "realizado" || pagosList[i - 1].Estado ==
                    "anulado");
                    <tr>
                      <td>@pago.NumeroPago</td>
                      <td>@pago.FechaVencimiento.ToShortDateString()</td>
                      <td>@(pago.FechaPago == DateTime.MinValue ? "---" : pago.FechaPago.ToShortDateString())</td>
                      <td style="max-width:450px; word-break:break-word; white-space:pre-line;">@pago.Detalle</td>
                      <td>$@pago.Importe</td>
                      <td>
                        @if (pago.Estado == "realizado")
                        {
                          <span class="badge rounded-pill bg-success px-3 py-2">Realizado</span>
                        }
                        else if (pago.Estado == "pendiente")
                        {
                          <span class="badge rounded-pill bg-warning text-dark px-3 py-2">Pendiente</span>
                        }
                        else if (pago.Estado == "anulado")
                        {
                          <span class="badge rounded-pill bg-danger px-3 py-2">Anulado</span>
                        }
                        else
                        {
                          <span class="badge rounded-pill bg-secondary px-3 py-2">@pago.Estado</span>
                        }
                      </td>
                      <td class="text-center">
                        <button type="button" class="btn btn-outline-primary btn-sm" data-bs-toggle="modal"
                          data-bs-target="#modalEditarPago_@pago.NumeroPago" @(habilitado ? "" : "disabled")>
                          <i class="bi bi-pencil"></i> Editar pago
                        </button>
                      </td>
                    </tr>
                  }
                </tbody>
              </table>
            </div>
          </div>
        </div>
      }
    </div>
  </div>
</div>

@if (ViewBag.Pagos != null && ((IEnumerable<inmobiliaria.Models.Pago>)ViewBag.Pagos).Any())
{
  foreach (var pagoModal in (IEnumerable<inmobiliaria.Models.Pago>)ViewBag.Pagos)
  {
    <div class="modal fade" id="modalEditarPago_@pagoModal.NumeroPago" tabindex="-1"
      aria-labelledby="modalEditarPagoLabel_@pagoModal.NumeroPago" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <form method="post" action="/panel/pagos/editar/@pagoModal.IdPago">
            <div class="modal-header">
              <h5 class="modal-title" id="modalEditarPagoLabel_@pagoModal.NumeroPago">
                Pago del @pagoModal.FechaVencimiento.ToString("dd/MM/yyyy")
              </h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
              <input type="hidden" name="IdPago" value="@pagoModal.IdPago" />
              <input type="hidden" name="IdContrato" value="@pagoModal.IdContrato" />
              <div class="mb-3">
                <label class="form-label">Número de Pago</label>
                <input name="NumeroPago" type="number" class="form-control" value="@pagoModal.NumeroPago" required
                  readonly />
              </div>
              <div class="mb-3">
                <label class="form-label">Fecha de Pago</label>
                <input name="FechaPago" type="date" class="form-control"
                  value="@(pagoModal.FechaPago == DateTime.MinValue ? DateTime.Today.ToString("yyyy-MM-dd") : pagoModal.FechaPago.ToString("yyyy-MM-dd"))"
                  required />
              </div>
              <div class="mb-3">
                <label class="form-label">Detalle</label>
                <textarea name="Detalle" class="form-control" rows="2">@pagoModal.Detalle</textarea>
              </div>
              <div class="mb-3">
                <label class="form-label">Importe</label>
                <input name="Importe" type="number" step="0.01" class="form-control"
                  value="@(pagoModal.Importe.ToString(System.Globalization.CultureInfo.InvariantCulture))" required
                  readonly />
              </div>
              <div class="mb-3">
                <label class="form-label">Estado</label>
                <select name="Estado" class="form-select">
                  <option value="pendiente" selected="@(pagoModal.Estado == "pendiente" ? "selected" : null)">Pendiente
                  </option>
                  <option value="realizado" selected="@(pagoModal.Estado == "realizado" ? "selected" : null)">Realizado
                  </option>
                  <option value="anulado" selected="@(pagoModal.Estado == "anulado" ? "selected" : null)">Anulado</option>
                </select>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
              <button type="submit" class="btn btn-primary">Guardar cambios</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  }
}

@section Scripts {
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
}
