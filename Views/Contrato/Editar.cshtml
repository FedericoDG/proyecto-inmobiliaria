@model inmobiliaria.Models.Contrato
@{
  ViewData["Title"] = "Editar Contrato";
  Layout = "~/Views/Panel/_Layout.cshtml";
}

<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-md-10 col-lg-8">
      <div class="card shadow border-0">
        <div class="card-header bg-primary text-white d-flex align-items-center">
          <i class="bi bi-pencil-square fs-4 me-2"></i>
          <span class="fs-4">Editar Contrato</span>
        </div>
        <div class="card-body">
          <form asp-action="Editar" method="post" autocomplete="off">
            <input type="hidden" asp-for="IdContrato" />
            <input type="hidden" asp-for="IdUsuarioCreador" />
            <div class="row g-3">
              <div class="col-md-6">
                <label asp-for="IdInquilino" class="form-label">Inquilino</label>
                <select asp-for="IdInquilino" class="form-select">
                  <option value="">Seleccione inquilino</option>
                  @foreach (var i in ViewBag.Inquilinos)
                  {
                    <option value="@i.IdInquilino" selected="@(i.IdInquilino == Model.IdInquilino ? "selected" : null)">
                      @i.Nombre @i.Apellido (@i.Dni)</option>
                  }
                </select>
                <span asp-validation-for="IdInquilino" class="text-danger small"></span>
              </div>
              <div class="col-md-6">
                <label asp-for="IdInmueble" class="form-label">Inmueble</label>
                <select asp-for="IdInmueble" class="form-select">
                  <option value="">Seleccione inmueble</option>
                  @foreach (var inm in ViewBag.Inmuebles)
                  {
                    <option value="@inm.IdInmueble" selected="@(inm.IdInmueble == Model.IdInmueble ? "selected" : null)">
                      @inm.Direccion</option>
                  }
                </select>
                <span asp-validation-for="IdInmueble" class="text-danger small"></span>
              </div>
            </div>
            <div class="row g-3 mt-2">
              <div class="col-md-6">
                <label asp-for="FechaInicio" class="form-label">Fecha de Inicio</label>
                <input asp-for="FechaInicio" class="form-control" type="date" />
                <span asp-validation-for="FechaInicio" class="text-danger small"></span>
              </div>
              <div class="col-md-6">
                <label asp-for="FechaFinOriginal" class="form-label">Fecha de Finalización</label>
                <input asp-for="FechaFinOriginal" class="form-control" type="date" />
                <span asp-validation-for="FechaFinOriginal" class="text-danger small"></span>
              </div>
            </div>
            <div class="row g-3 mt-2">
              <div class="col-md-6">
                <label asp-for="MontoMensual" class="form-label">Monto Mensual</label>
                <input asp-for="MontoMensual" class="form-control" type="number" min="0" required />
                <span asp-validation-for="MontoMensual" class="text-danger small"></span>
              </div>
            </div>
            <div class="row g-3 mt-2">
              <div class="col-md-6">
                <!-- Botón Rescindir Contrato -->
                <button type="button" class="btn btn-danger w-100" data-bs-toggle="modal"
                  data-bs-target="#modalRescindir" @(Model.Estado == "rescindido" ? "disabled" : "")>
                  <i class="bi bi-x-circle me-1"></i> Rescindir contrato
                </button>
              </div>
              <div class="col-md-6">
                <!-- Botón Renovar Contrato -->
                <button type="button" class="btn btn-success w-100" data-bs-toggle="modal"
                  data-bs-target="#modalRenovar" @((Model.Estado != "vigente" || DateTime.Now < Model.FechaFinOriginal)
                                                                   ? "disabled" : "")>
                  <i class="bi bi-arrow-repeat me-1"></i> Renovar contrato
                </button>
              </div>
            </div>
            <div class="d-flex justify-content-end gap-2 mt-4">
              <button type="submit" class="btn btn-primary px-4">
                <i class="bi bi-check-lg me-1"></i> Guardar
              </button>
              <a href="/panel/contratos" class="btn btn-secondary px-4">
                <i class="bi bi-x-lg me-1"></i> Cancelar
              </a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Modal Rescindir Contrato -->
<div class="modal fade" id="modalRescindir" tabindex="-1" aria-labelledby="modalRescindirLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalRescindirLabel">Rescindir contrato</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
      </div>
      <div class="modal-body">
        <form id="form-rescindir-contrato" method="post" action="/panel/contratos/rescindir">
          <input type="hidden" name="IdContrato" value="@Model.IdContrato" />
          <div class="mb-3">
            <label for="FechaFinAnticipada" class="form-label">Fecha de Finalización Anticipada</label>
            <input type="date" class="form-control" name="FechaFinAnticipada" id="FechaFinAnticipada" required />
          </div>
          <div class="mb-3">
            <label for="Multa" class="form-label">Multa</label>
            <input type="number" class="form-control" name="Multa" id="Multa" min="0" required readonly />
            <div id="resultadoMulta" class="mt-2 alert alert-info" style="display:none;"></div>
          </div>
          <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-danger">Confirmar rescisión</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- Modal Renovar Contrato -->
<div class="modal fade" id="modalRenovar" tabindex="-1" aria-labelledby="modalRenovarLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalRenovarLabel">Renovar contrato</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
      </div>
      <div class="modal-body">
        <form id="form-renovar-contrato" method="post" action="/panel/contratos/renovar">
          <input type="hidden" name="IdContratoAnterior" value="@Model.IdContrato" />
          <input type="hidden" name="IdInquilino" value="@Model.IdInquilino" />
          <input type="hidden" name="IdInmueble" value="@Model.IdInmueble" />
          <div class="mb-3">
            <label for="NuevaFechaInicio" class="form-label">Nueva Fecha de Inicio</label>
            <input type="date" class="form-control" name="NuevaFechaInicio" id="NuevaFechaInicio" required />
          </div>
          <div class="mb-3">
            <label for="NuevaFechaFin" class="form-label">Nueva Fecha de Finalización</label>
            <input type="date" class="form-control" name="NuevaFechaFin" id="NuevaFechaFin" required />
          </div>
          <div class="mb-3">
            <label for="NuevoMontoMensual" class="form-label">Nuevo Monto Mensual</label>
            <input type="number" class="form-control" name="NuevoMontoMensual" id="NuevoMontoMensual" min="0"
              required />
          </div>
          <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-success">Confirmar renovación</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

@section Scripts {
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const fechaFinAnticipadaInput = document.getElementById('FechaFinAnticipada');
      const multaInput = document.getElementById('Multa');
      const fechaFinOriginal = '@(Model.FechaFinOriginal.HasValue? Model.FechaFinOriginal.Value.ToString("yyyy-MM-dd") : "")';
      const fechaInicio = '@(Model.FechaInicio.HasValue? Model.FechaInicio.Value.ToString("yyyy-MM-dd") : "")';
      const montoMensual = parseFloat('@Model.MontoMensual');
      const resultadoMulta = document.getElementById('resultadoMulta');

      fechaFinAnticipadaInput.addEventListener('change', function () {
        const fechaFinAnticipada = this.value;
        if (!fechaFinAnticipada) {
          resultadoMulta.style.display = 'none';
          multaInput.value = '';
          return;
        }
        const inicio = new Date(fechaInicio);
        const finOriginal = new Date(fechaFinOriginal);
        const finAnticipada = new Date(fechaFinAnticipada);
        const mesesOriginal = (finOriginal.getFullYear() - inicio.getFullYear()) * 12 + (finOriginal.getMonth() - inicio.getMonth());
        const mesesAnticipada = (finAnticipada.getFullYear() - inicio.getFullYear()) * 12 + (finAnticipada.getMonth() - inicio.getMonth());
        const mitadContrato = Math.floor(mesesOriginal / 2);
        let mensaje = '';
        let multa = montoMensual;
        if (mesesAnticipada >= mitadContrato) {
          mensaje = 'Ha pasado más de la mitad del contrato: ' + mesesAnticipada + ' de ' + mesesOriginal + ' meses. La multa es un mes de contrato.';
          resultadoMulta.className = 'mt-2 alert alert-success';
        } else {
          mensaje = 'Ha pasado menos de la mitad del contrato: ' + mesesAnticipada + ' de ' + mesesOriginal + ' meses. La multa es un mes de contrato.';
          resultadoMulta.className = 'mt-2 alert alert-warning';
          multa *= 2;
        }
        resultadoMulta.textContent = mensaje;
        resultadoMulta.style.display = 'block';
        multaInput.value = multa;
      });
    });
  </script>
}
