@{
    string propietarioNombre = Model.IdPropietario.ToString();
    if (ViewBag.Propietarios != null)
    {
        foreach (var p in ViewBag.Propietarios)
        {
            if (p.IdPropietario == Model.IdPropietario)
            {
                propietarioNombre = p.Nombre + " " + p.Apellido + " (" + p.Dni + ")";
                break;
            }
        }
    }
}
@model inmobiliaria.Models.Inmueble
@{
    ViewData["Title"] = "Editar Inmueble";
    Layout = "~/Views/Panel/_Layout.cshtml";
}

<h1 class="text-center fs-3">EDITAR INMUEBLE</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <form asp-action="Editar" method="post">
          <input type="hidden" asp-for="IdInmueble" />
          <div class="form-group mb-3">
              <label for="input-propietario">Propietario</label>
              <input type="text" class="form-control" placeholder="Propietario" id="input-propietario" autocomplete="off" value="@propietarioNombre" />
              <input type="hidden" name="IdPropietario" id="id-propietario-hidden" value="@Model.IdPropietario" />
              <span asp-validation-for="IdPropietario" class="text-danger"></span>
          </div>
@section Scripts {
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css" />
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.min.js"></script>
    <script>
        $(function () {
            var propietarios = [
                @foreach (var p in ViewBag.Propietarios)
                {
                    @: { label: "@Html.Raw(p.Nombre.Replace("\"", "\\\"") + " " + p.Apellido.Replace("\"", "\\\"") + " (" + p.Dni + ")")", value: "@p.IdPropietario" },
                }
            ];
            $("#input-propietario").autocomplete({
                source: propietarios,
                minLength: 1,
                select: function (event, ui) {
                    $(this).val(ui.item.label);
                    $('#id-propietario-hidden').val(ui.item.value);
                    return false;
                }
            });
            // Si el usuario borra el campo, borra el hidden
            $('#input-propietario').on('input', function() {
                if (!$(this).val()) {
                    $('#id-propietario-hidden').val('');
                }
            });
        });
    </script>
}
