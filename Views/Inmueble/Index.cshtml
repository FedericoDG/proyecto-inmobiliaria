@model IEnumerable<inmobiliaria.Models.Inmueble>
@{
    ViewData["Title"] = "Lista de Inmuebles";
    Layout = "~/Views/Panel/_Layout.cshtml";
}

@{
    ViewData["Title"] = "Lista de Inmuebles";
    Layout = "~/Views/Panel/_Layout.cshtml";

    var propietarios = ViewBag.Propietarios as IEnumerable<inmobiliaria.Models.Propietario>;
    var tipos = ViewBag.TiposInmueble as IEnumerable<inmobiliaria.Models.TipoInmueble>;
}

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
        @TempData["Mensaje"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
    </div>
}




<div class="row mb-4">
    <div class="col-12">
        <div class="card shadow-sm border-0 bg-primary text-white">
            <div class="card-body d-flex align-items-center justify-content-between">
                <div>
                    <h1 class="card-title mb-0 fs-3">
                        <i class="bi bi-house-door-fill me-2"></i>Inmuebles
                    </h1>
                    <small class="text-white">Listado de todos los inmuebles registrados</small>
                </div>
                <a class="btn btn-light btn-lg" href="/panel/inmuebles/crear">
                    <i class="bi bi-plus-square-fill me-1"></i> Nuevo inmueble
                </a>
            </div>
        </div>
    </div>
</div>



<div class="d-flex justify-content-end mb-3 gap-3 flex-wrap">
    <!-- estado -->
    <div class="card shadow-sm border-0 flex-grow-1" style="min-width: 280px; max-width: 400px;">
        <div class="card-body p-3">
            <form method="get" class="mb-0">
                @{
                    var estadoSeleccionado = Context.Request.Query["estado"].ToString();
                    var propietarioId = Context.Request.Query["propietarioId"].ToString();
                }
                @if (!string.IsNullOrEmpty(propietarioId))
                {
                    <input type="hidden" name="propietarioId" value="@propietarioId" />
                }
                <label class="form-label fw-bold mb-2">Filtrar por estado</label>
                <div class="d-flex align-items-center gap-2">
                    <select id="estado" name="estado" class="form-select form-select-sm" style="max-width: 180px;">
                        @if (string.IsNullOrEmpty(estadoSeleccionado))
                        {
                            <option value="" selected>Todos los estados</option>
                        }
                        else
                        {
                            <option value="">Todos los estados</option>
                        }
                        @if (estadoSeleccionado == "disponible")
                        {
                            <option value="disponible" selected>Disponible</option>
                        }
                        else
                        {
                            <option value="disponible">Disponible</option>
                        }
                        @if (estadoSeleccionado == "suspendido")
                        {
                            <option value="suspendido" selected>Suspendido</option>
                        }
                        else
                        {
                            <option value="suspendido">Suspendido</option>
                        }
                        @if (estadoSeleccionado == "ocupado")
                        {
                            <option value="ocupado" selected>Ocupado</option>
                        }
                        else
                        {
                            <option value="ocupado">Ocupado</option>
                        }
                    </select>
                    <button type="submit" class="btn btn-primary btn-sm">Filtrar</button>
                    <a href="/panel/inmuebles" class="btn btn-outline-secondary btn-sm">Borrar filtros</a>
                </div>
            </form>
        </div>
    </div>
    <!-- fechas -->
    <div class="card shadow-sm border-0 flex-grow-1" style="min-width: 280px; max-width: 650px;">
        <div class="card-body p-3">
            <form method="get" class="mb-0">
                @{
                    var fechaInicio = Context.Request.Query["fechaInicio"].ToString();
                    var fechaFin = Context.Request.Query["fechaFin"].ToString();
                    var propietarioId = Context.Request.Query["propietarioId"].ToString();
                }
                @if (!string.IsNullOrEmpty(propietarioId))
                {
                    <input type="hidden" name="propietarioId" value="@propietarioId" />
                }
                <label class="form-label fw-bold mb-2">Filtrar disponibles</label>
                <div class="d-flex align-items-center gap-2 flex-wrap">
                    <span class="input-group-text">Inicio</span>
                    <input type="date" name="fechaInicio" class="form-control form-control-sm" value="@fechaInicio"
                        style="max-width: 150px;" />
                    <span class="input-group-text">Fin</span>
                    <input type="date" name="fechaFin" class="form-control form-control-sm" value="@fechaFin"
                        style="max-width: 150px;" />
                    <button type="submit" class="btn btn-primary btn-sm">Filtrar</button>
                    <a href="/panel/inmuebles" class="btn btn-outline-secondary btn-sm">Borrar filtros</a>
                </div>
            </form>
        </div>
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr class="table-primary">
            <th>ID</th>
            <th>Dirección</th>
            <th>Propietario</th>
            <th>Tipo</th>
            <th>Ambientes</th>
            <th>Uso</th>
            <th>Coordenadas</th>
            <th>Precio</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var inm in Model)
        {
            <tr>
                <td>@inm.IdInmueble</td>
                <td>@inm.Direccion</td>
                <td>
                    @{
                        var prop = propietarios?.FirstOrDefault(p => p.IdPropietario == inm.IdPropietario);
                    }
                    @(prop != null ? prop.Nombre + " " + prop.Apellido : "N/A")
                </td>
                <td>
                    @{
                        var tipo = tipos?.FirstOrDefault(t => t.IdTipo == inm.IdTipo);
                    }
                    @(tipo != null ? tipo.Nombre : "N/A")
                </td>
                <td>@inm.CantidadAmbientes</td>
                <td>@inm.Uso</td>
                <td>@inm.Coordenadas</td>
                <td>@inm.Precio</td>
                <td>@inm.Estado</td>
                <td class="text-center">
                    <a class="btn btn-outline-primary btn-sm me-1" href="/panel/inmuebles/editar/@inm.IdInmueble"
                        title="Editar">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a class="btn btn-outline-info btn-sm me-1" href="/panel/contratos?inmuebleId=@inm.IdInmueble"
                        title="Ver contratos de este inmueble">
                        <i class="bi bi-file-earmark-text"></i>
                    </a>
                    @if (User.IsInRole("administrador"))
                    {

                        <button type="button" class="btn btn-outline-danger btn-sm" data-bs-toggle="modal"
                            data-bs-target="#modalEliminar" data-id="@inm.IdInmueble" data-nombre="@inm.Direccion"
                            title="Eliminar">
                            <i class="bi bi-trash"></i>
                        </button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<nav aria-label="Paginación"></nav>
<ul class="pagination justify-content-center">
    <li class="page-item @(ViewBag.Page <= 1 ? "disabled" : "")">
        <a class="page-link"
            href="?page=@(ViewBag.Page - 1)&pageSize=@ViewBag.PageSize@(ViewBag.EstadoSeleccionado != null ? "&estado=" + ViewBag.EstadoSeleccionado : "")@(ViewBag.PropietarioId != null ? "&propietarioId=" + ViewBag.PropietarioId : "")">Anterior</a>
    </li>
    @for (int i = 1; i <= ViewBag.TotalPages; i++)
    {
        <li class="page-item @(i == ViewBag.Page ? "active" : "")">
            <a class="page-link"
                href="?page=@i&pageSize=@ViewBag.PageSize@(ViewBag.EstadoSeleccionado != null ? "&estado=" + ViewBag.EstadoSeleccionado : "")@(ViewBag.PropietarioId != null ? "&propietarioId=" + ViewBag.PropietarioId : "")">@i</a>
        </li>
    }
    <li class="page-item @(ViewBag.Page >= ViewBag.TotalPages ? "disabled" : "")">
        <a class="page-link"
            href="?page=@(ViewBag.Page + 1)&pageSize=@ViewBag.PageSize@(ViewBag.EstadoSeleccionado != null ? "&estado=" + ViewBag.EstadoSeleccionado : "")@(ViewBag.PropietarioId != null ? "&propietarioId=" + ViewBag.PropietarioId : "")">Siguiente</a>
    </li>
</ul>
</nav>

<!-- Modal de confirmación de borrado -->
<div class="modal fade" id="modalEliminar" tabindex="-1" aria-labelledby="modalEliminarLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalEliminarLabel">Confirmar eliminación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <p>¿Estás seguro que deseas eliminar el inmueble <span id="nombreInmueble"></span>?</p>
            </div>
            <div class="modal-footer">
                <form id="formEliminar" method="post">
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <script>
        const modalEliminar = document.getElementById('modalEliminar');
        modalEliminar.addEventListener('show.bs.modal', function (event) {
            const button = event.relatedTarget;
            const id = button.getAttribute('data-id');
            const nombre = button.getAttribute('data-nombre');
            document.getElementById('nombreInmueble').textContent = nombre;
            const form = document.getElementById('formEliminar');
            form.action = '/panel/inmuebles/eliminar/' + id;
        });
    </script>
}
