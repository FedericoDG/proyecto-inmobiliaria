@model inmobiliaria.Models.Pago
@{
    ViewData["Title"] = "Detalle Pago";
    Layout = "~/Views/Panel/_Layout.cshtml";
}

<div class="row mb-4">
  <div class="col-12">
    <div class="card shadow-sm border-0 bg-primary text-white">
      <div class="card-body d-flex align-items-center justify-content-between">
        <div>
          <h1 class="card-title mb-0 fs-3">
            <i class="bi bi-cash-coin me-2"></i>Detalle de Pago
          </h1>
          <small class="text-white-50">Información completa del pago seleccionado</small>
        </div>
        <a href="/panel/pagos" class="btn btn-light btn-lg">
          <i class="bi bi-arrow-left me-1"></i> Volver
        </a>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
          <dl class="row mb-0">
            <dt class="col-sm-4">ID Pago</dt>
            <dd class="col-sm-8">@Model.IdPago</dd>
            <dt class="col-sm-4">ID Contrato</dt>
            <dd class="col-sm-8">@Model.IdContrato</dd>
            <dt class="col-sm-4">Número de Pago</dt>
            <dd class="col-sm-8">@Model.NumeroPago</dd>
            <dt class="col-sm-4">Fecha de Pago</dt>
            <dd class="col-sm-8">@Model.FechaPago.ToShortDateString()</dd>
            <dt class="col-sm-4">Detalle</dt>
            <dd class="col-sm-8">@Model.Detalle</dd>
            <dt class="col-sm-4">Importe</dt>
            <dd class="col-sm-8">$@Model.Importe</dd>
            <dt class="col-sm-4">Estado</dt>
            <dd class="col-sm-8">@Model.Estado</dd>
            <dt class="col-sm-4">ID Usuario Creador</dt>
            <dd class="col-sm-8">@Model.IdUsuarioCreador</dd>
            <dt class="col-sm-4">ID Usuario Anulador</dt>
            <dd class="col-sm-8">@Model.IdUsuarioAnulador</dd>
          </dl>
        </div>
      </div>
    </div>
  </div>
</div>

@section Scripts {
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
}
