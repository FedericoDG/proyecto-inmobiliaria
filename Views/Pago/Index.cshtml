@if (TempData["Mensaje"] != null)
{
  <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
    @TempData["Mensaje"]
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
  </div>
}

@if (TempData["Error"] != null)
{
  <div class="alert alert-danger alert-dismissible fade show text-center" role="alert">
    @TempData["Error"]
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
  </div>
}
@model IEnumerable<inmobiliaria.Models.Pago>
@{
  ViewData["Title"] = "Lista de Pagos";
  Layout = "~/Views/Panel/_Layout.cshtml";
  var contratos = ViewBag.Contratos as IEnumerable<inmobiliaria.Models.Contrato>;
  var inmuebles = ViewBag.Inmuebles as IEnumerable<inmobiliaria.Models.Inmueble>;
}

@if (TempData["Mensaje"] != null)
{
  <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
    @TempData["Mensaje"]
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
  </div>
}

<div class="row mb-4">
  <div class="col-12">
    <div class="card shadow-sm border-0 bg-primary text-white">
      <div class="card-body d-flex align-items-center justify-content-between">
        <div>
          <h1 class="card-title mb-0 fs-3">
            <i class="bi bi-cash-coin me-2"></i>Pagos
          </h1>
          <small class="text-white">Listado de todos los pagos registrados</small>
        </div>
        <button type="button" class="btn btn-light btn-lg" data-bs-toggle="modal" data-bs-target="#modalNuevoPago">
          <i class="bi bi-plus-square-fill me-1"></i> Nuevo pago
        </button>
        <!-- Modal Nuevo Pago -->
        <div class="modal fade" id="modalNuevoPago" tabindex="-1" aria-labelledby="modalNuevoPagoLabel"
          aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header bg-primary text-white">
                <h5 class="modal-title fw-bold" id="modalNuevoPagoLabel">
                  <i class="bi bi-search me-2"></i>Buscar contrato vigente por DNI
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                  aria-label="Cerrar"></button>
              </div>
              <div class="modal-body">
                <form id="formNuevoPago" autocomplete="off">
                  <div class="mb-3">
                    <label for="dniInquilino" class="form-label fw-bold text-dark">Buscar contrato por DNI de
                      inquilino</label>
                    <input type="text" class="form-control" id="dniInquilino" name="dniInquilino"
                      placeholder="Ej: 42889455" autocomplete="off" />
                  </div>
                  <div id="resultContratos" class="mb-3"></div>
                </form>
              </div>
              <div class="modal-footer bg-light">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="d-flex justify-content-end mb-3 gap-3 flex-wrap">
  <div class="card shadow-sm border-0 flex-grow-1" style="min-width: 280px; max-width: 400px;">
    <div class="card-body p-3">
      <form method="get" class="mb-0">
        @{
          var estadoSeleccionado = Context.Request.Query["estado"].ToString();
        }
        <label class="form-label fw-bold mb-2">Filtrar por estado</label>
        <div class="d-flex align-items-center gap-2">
          <select id="estado" name="estado" class="form-select form-select-sm" style="max-width: 180px;">
            @{
              var selectedTodos = string.IsNullOrEmpty(estadoSeleccionado) ? "selected" : "";
            }
            <option value="" selected="@selectedTodos">Todos</option>
            <option value="pendiente" selected="@(estadoSeleccionado == "pendiente" ? "selected" : null)">Pendiente
            </option>
            <option value="realizado" selected="@(estadoSeleccionado == "realizado" ? "selected" : null)">Realizado
            </option>
            <option value="anulado" selected="@(estadoSeleccionado == "anulado" ? "selected" : null)">Anulado</option>
          </select>
          <button type="submit" class="btn btn-primary btn-sm">Filtrar</button>
          <a href="/panel/pagos" class="btn btn-outline-secondary btn-sm">Borrar filtros</a>
        </div>
      </form>
    </div>
  </div>
</div>
<div class="table-responsive mb-3">
  <table class="table table-hover align-middle shadow-sm">
    <thead class="table-primary">
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Inmueble</th>
        <th scope="col">Número</th>
        <th scope="col">Fecha</th>
        <th scope="col">Importe</th>
        <th scope="col">Estado</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var p in Model)
      {
        <tr>
          <td>@p.IdPago</td>
          <td>
            @{
              var contrato = contratos?.FirstOrDefault(c => c.IdContrato == p.IdContrato);
              var inmueble = contrato != null && inmuebles != null ? inmuebles.FirstOrDefault(i => i.IdInmueble ==
              contrato.IdInmueble) : null;
            }
            @(inmueble != null ? inmueble.Direccion : "-")
          </td>
          <td>@p.NumeroPago</td>
          <td>@p.FechaPago.ToShortDateString()</td>
          <td>$@p.Importe</td>
          <td>@p.Estado</td>
        </tr>
      }
    </tbody>
  </table>
</div>

<nav aria-label="Paginación">
  <ul class="pagination justify-content-center">
    <li class="page-item @(ViewBag.Page <= 1 ? "disabled" : "")">
      <a class="page-link" href="?page=@(ViewBag.Page - 1)&pageSize=@ViewBag.PageSize">Anterior</a>
    </li>
    @for (int i = 1; i <= ViewBag.TotalPages; i++)
    {
      <li class="page-item @(i == ViewBag.Page ? "active" : "")">
        <a class="page-link" href="?page=@i&pageSize=@ViewBag.PageSize">@i</a>
      </li>
    }
    </li>
    <li class="page-item @(ViewBag.Page >= ViewBag.TotalPages ? "disabled" : "")">
      <a class="page-link" href="?page=@(ViewBag.Page + 1)&pageSize=@ViewBag.PageSize">Siguiente</a>
    </li>
  </ul>
</nav>

@section Scripts {
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
  <script>
    let debounceTimer;
    document.getElementById('dniInquilino').addEventListener('input', function (e) {
      const value = e.target.value.trim();
      clearTimeout(debounceTimer);
      if (value.length >= 3) {
        debounceTimer = setTimeout(() => {
          fetch(`/panel/pagos/buscar-contratos-vigentes?dni=${encodeURIComponent(value)}`)
            .then(res => res.json())
            .then(data => {
              const container = document.getElementById('resultContratos');
              if (data.length === 0) {
                container.innerHTML = '<div class="alert alert-warning">No se encontraron contratos vigentes para ese DNI.</div>';
              } else {
                container.innerHTML = '<ul class="list-group">' +
                  data.map(c => `
                                      <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <span>${c.direccion}</span>
                                        <a href="http://localhost:5019/panel/contratos/detalle/${c.idContrato}" class="btn btn-success btn-sm">Ver contrato</a>
                                      </li>
                                    `).join('') +
                  '</ul>';
              }
            });
        }, 400);
      } else {
        document.getElementById('resultContratos').innerHTML = '';
      }
    });
  </script>
}
