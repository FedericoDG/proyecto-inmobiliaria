@{
    ViewData["Title"] = "Página no encontrada";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid"
    style="min-height: calc(100vh - 170px); display: flex; align-items: center; justify-content: center;">
    <div class="card shadow-lg border-0 p-4" style="max-width: 420px;">
        <div class="text-center">
            <span class="display-1 fw-bold text-danger">404</span>
            <div class="mb-3">
                <i class="bi bi-exclamation-triangle-fill text-warning" style="font-size: 3rem;"></i>
            </div>
            <h2 class="mb-2">Página no encontrada</h2>
            <p class="text-muted mb-4">La página que buscas no existe o ha sido movida.</p>
            <a href="/" class="btn btn-primary btn-lg px-4">
                <i class="bi bi-house-door-fill me-2"></i>Volver al inicio
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
}
