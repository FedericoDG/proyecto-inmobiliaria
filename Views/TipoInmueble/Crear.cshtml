@model inmobiliaria.Models.TipoInmueble
@{
    ViewData["Title"] = "Crear Tipo de Inmueble";
    Layout = "~/Views/Panel/_Layout.cshtml";
}

<h1 class="text-center fs-3">NUEVO TIPO DE INMUEBLE</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <form asp-action="Crear" method="post">
        <div class="mb-3">
          <label asp-for="Nombre" class="form-label"></label>
          <input asp-for="Nombre" class="form-control" />
          <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="mb-3">
          <label asp-for="Descripcion" class="form-label"></label>
          <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
          <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Crear</button>
        <a href="/panel/tipos-inmueble" class="btn btn-secondary">Cancelar</a>
      </form>
    </div>
  </div>
</div>
