@model IEnumerable<inmobiliaria.Models.TipoInmueble>
@{
    ViewData["Title"] = "Lista de Tipos de Inmueble";
    Layout = "~/Views/Panel/_Layout.cshtml";
}

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
        @TempData["Mensaje"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
    </div>
}

<h1 class="text-center fs-3">TIPOS DE INMUEBLE</h1>

<div class="d-flex justify-content-end mb-2">
  <a class="btn btn-primary" href="/panel/tipos-inmueble/crear">Nuevo tipo de inmueble</a>
</div>

<table class="table table-striped">
  <thead>
      <tr>
          <th>ID</th>
          <th>Nombre</th>
          <th>Descripción</th>
          <th>Acciones</th>
      </tr>
  </thead>
  <tbody>
      @foreach (var tipo in Model)
      {
          <tr>
              <td>@tipo.IdTipo</td>
              <td>@tipo.Nombre</td>
              <td>@tipo.Descripcion</td>
              <td>
                  <a class="btn btn-outline-primary btn-sm" href="/panel/tipos-inmueble/editar/@tipo.IdTipo">Editar</a>
                  <button type="button" class="btn btn-outline-danger btn-sm" data-bs-toggle="modal" data-bs-target="#modalEliminar" data-id="@tipo.IdTipo" data-nombre="@tipo.Nombre">Eliminar</button>
              </td>
          </tr>
      }
  </tbody>
  </table>

<!-- Modal de confirmación de borrado -->
<div class="modal fade" id="modalEliminar" tabindex="-1" aria-labelledby="modalEliminarLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalEliminarLabel">Confirmar eliminación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <p>¿Estás seguro que deseas eliminar el tipo de inmueble <span id="nombreTipo"></span>?</p>
            </div>
            <div class="modal-footer">
                <form id="formEliminar" method="post">
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
  const modalEliminar = document.getElementById('modalEliminar');
  modalEliminar.addEventListener('show.bs.modal', function (event) {
    const button = event.relatedTarget;
    const id = button.getAttribute('data-id');
    const nombre = button.getAttribute('data-nombre');
    document.getElementById('nombreTipo').textContent = nombre;
    const form = document.getElementById('formEliminar');
    form.action = '/panel/tipos-inmueble/eliminar/' + id;
  });
</script>
}
